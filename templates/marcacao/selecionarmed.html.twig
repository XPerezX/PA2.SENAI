{% extends 'base.html.twig' %}

{% block title %}Marcação de Consulta{% endblock %}

{% block content %}
    <div class="wrapper">
        <div class="container" style="margin-top: 50px">
            <form method="post" class="card">
                <div class="card-body">

                    <h1>Por qual opção você deseja marcar sua consulta?</h1>
                    <div class="login-form">

                      {{ form_start(form) }} {# antes de adicionar os campos do formulário você inicia um bloco de formulário
                        e no final vc irá fechar esse bloco com form_end e o nome do form#}


                       


                        <div class="form-group">
                          


                          {% for batch in form.medico_idmedico|batch(4) %}
                                {% if i == 0 %}
                                <label> Segunda </label>
                                {% endif %}
                                {% if i == 1 %}
                                    <label> Terça </label>
                                {% endif %}
                                {% if i == 2 %}
                                    <label> Quarta </label>
                                {% endif %}
                                {% if i == 3 %}
                                    <label> Quinta </label>
                                {% endif %}
                                {% if i == 4 %}
                                    <label> Sexta </label>
                                {% endif %}
                                <div class="form-control input-border-bottom">
                                    {% for option in batch %}

                                            {{ form_label(option) }}
                                            {{ form_widget(option) }}

                                    {% endfor %}
                                </div>
                                {% set i = i + 1 %}
                            {% endfor %}
                       
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.confirme, {'attr': {'class': 'btn btn-primary'}}) }}
                            
                        </div>
                    </div>
                     {{ form_end(form) }}
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}